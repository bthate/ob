#!/usr/bin/env python3
# This file is placed in the Public Domain.

import os
import sys

from run import Handler, Kernel

k = Kernel()
k.cfg.p = "om"
k.cfg.m = "om.irc,om.rss"
wd = os.path.expanduser("~/.ob")

def daemon():
    pid = os.fork()
    if pid != 0:
        os._exit(0)
    os.setsid()
    os.umask(0)
    si = open("/dev/null", 'r')
    so = open("/dev/null", 'a+')
    se = open("/dev/null", 'a+')
    os.dup2(si.fileno(), sys.stdin.fileno())
    os.dup2(so.fileno(), sys.stdout.fileno())
    os.dup2(se.fileno(), sys.stderr.fileno())

def main():
    daemon()
    k.start()
    k.wait()

main()

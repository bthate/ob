#!/usr/bin/env python3
# This file is placed in the Public Domain.

import os
import readline
import sys

from hdl import Handler
from run import Kernel, wrap

d = os.path.expanduser("~/.ob")
k = Kernel()
k.cfg.p = "om"

class CLI(Handler):

    def error(self, e):
        print(e.exc)
        raise Restart

    def raw(self, txt):
        print(txt)

def main():
    k.start(d)
    c = CLI()
    k.cmd(c, k.cfg.otxt)

wrap(main)

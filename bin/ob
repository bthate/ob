#!/usr/bin/env python3
# This file is placed in the Public Domain.

import os
import readline
import sys

from run import Handler, Kernel, wrap

k = Kernel()
k.cfg.p = "om"
wd = os.path.expanduser("~/.ob")

class CLI(Handler):

    def error(self, e):
        print(e.exc)
        raise Restart

    def raw(self, txt):
        print(txt)

def main():
    k.start()
    c = CLI()
    k.cmd(c, k.cfg.otxt)

wrap(main)

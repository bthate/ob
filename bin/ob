#!/usr/bin/env python3
# This file is placed in the Public Domain.

from ob.clt import Client
from ob.krn import Kernel, builtin
from ob.trm import wrap

import os
import readline
import sys

name = "ob"
wd = os.path.expanduser("~/.%s" % name)

def cprint(*args):
    print(*args)
    sys.stdout.flush()

class CLI(Client):

    def error(self, e):
        cprint(e.exc)
        raise Restart

    def raw(self, txt):
        cprint(txt)

class Console(CLI):

    def handle(self, e):
        k.dispatch(e)
        e.wait()

    def poll(self):
        return input("> ")

def main():
    k = Kernel()
    k.cfg.p = "om"
    k.boot(name, wd)
    builtin("k", k)
    k.start()
    wait = k.opts("c") or k.cfg.m
    if k.cfg.txt and not wait:
        c = CLI()
        return c.cmd(k.cfg.otxt)
    if wait:
        c = Console()
        c.start()
        k.wait()

wrap(main)

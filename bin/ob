#!/usr/bin/env python3
# This file is placed in the Public Domain.

import os, sys ; sys.path.insert(0, os.getcwd())

from ob.clt import Client
from ob.krn import Kernel, kernel
from ob.trm import wrap

import os
import readline
import sys

name = "ob"
wd = os.path.expanduser("~/.%s" % name)

def cprint(*args):
    print(*args)
    sys.stdout.flush()

class CLI(Client):

    def error(self, e):
        cprint(e.exc)
        raise Restart

    def raw(self, txt):
        cprint(txt)

class Console(CLI):

    def handle(self, e):
        self.dispatch(e)
        e.wait()

    def poll(self):
        return input("> ")

def error(e):
    cprint(e.exc)
    
def main():
    k = Kernel()
    k.start()
    wait = k.opts("c") or k.cfg.m
    if k.cfg.txt and not wait:
        c = CLI()
        c.scan("om,on")
        return k.cmd(c, k.cfg.otxt)
    if wait:
        c = Console()
        c.scan("om,on")
        c.start()
        k.wait()

wrap(main)

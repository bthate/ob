#!/usr/bin/env python3
# This file is placed in the Public Domain.

from ob.krn import Kernel, builtin

k = Kernel()
builtin("k", k)
import ob.all

import os
import readline
import sys

name = "ob"

def cprint(*args):
    print(*args)
    sys.stdout.flush()

class CLI(Client):

    def error(self, e):
        cprint(e.exc)
        raise Restart

    def raw(self, txt):
        cprint(txt)

class Console(CLI):

    def handle(self, clt, e):
        k.put(clt, e)
        e.wait()

    def poll(self):
        return input("> ")

def main():
    cfg.wd = os.path.expanduser("~/.%s" % name)
    k.boot(name)
    k.start()
    if k.cfg.txt and (not k.opts("c") or not k.cfg.m):
        c = CLI()
        return k.cmd(c, k.cfg.otxt)
    if k.cfg.m or k.opts("c"):
        c = Console()
        c.start()
        k.wait()

wrap(main)
